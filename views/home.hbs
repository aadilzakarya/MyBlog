<!-- my-reviews.hbs -->
<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
</head>

<form action="/add-blog" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" required>

  <label for="content">Content:</label>
  <textarea id="content" name="content" rows="4" required></textarea>

  <label for="author">Author:</label>
  <input type="text" id="author" name="author" required>

  <!-- Automatically generate the createdAt field when the user submits the form -->
  <input type="hidden" id="createdAt" name="createdAt" value="{{getCurrentTime}}">

  <button type="submit">Submit</button>
</form>


<body>
 
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Author</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      {{#each articles}}
      <tr>
        <td>{{title}}</td>
        <td>{{content}}</td>
        <td>{{author}}</td>
        <td>{{createdAt}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</body>
</html>
